<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurants">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input
            type="text"
            name="keyword"
            class="form-control"
            placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..."
            value="{{keyword}}"
            aria-describedby="search-button"
          />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i
                class="fas fa-search"
              ></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->

<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      {{> message }}
      <div class="row row-cols-sm-3">
        {{#each restaurants as |restaurant|}}
          <a href="/restaurants/{{restaurant.id}}" class="text-secondary">
            <div class="card mb-3">
              <img
                class="card-img-top"
                src="{{restaurant.image}}"
                alt="{{restaurant.name}}"
              />
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{restaurant.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i>
                  {{restaurant.category}}
                </div>

                <span class="badge rounded-pill bg-danger font-weight-normal">
                  {{restaurant.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <div class="button-container">
                    <form
                      action="/restaurants/delete/{{restaurant.id}}?_method=DELETE"
                      method="POST"
                      class="mt-2"
                      onsubmit="return confirm('Are you sure you want to delete this restaurant?');"
                    >
                      <button type="submit" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i>
                        Delete
                      </button>
                    </form>
                    <form
                      action="/restaurants/edit/{{restaurant.id}}"
                      method="GET"
                      class="mt-2"
                    >
                      <button type="submit" class="btn btn-success btn-sm">
                        <i class="fas fa-edit"></i>
                        Edit
                      </button>
                    </form>
                  </div>
                
                

              </div>
            </div>
          </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>
<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
    <li class="page-item {{#if isFirst}}disabled{{/if}}">
      <a class="page-link" href="?page={{Previous}}" tabindex="-1">Previous</a>
    </li>
    {{#each pagination}}
      <li class="page-item {{#if this.isCurrent}}active{{/if}}"><a class="page-link" href="?page={{this.current}}">{{this.current}}</a></li>
    {{/each}}
    <li class="page-item {{#if isLast}}disabled{{/if}}">
      <a class="page-link" href="?page={{NextPage}}">Next</a>
    </li>
  </ul>
</nav>
<style>
  /* 用來確保按鈕左右排 */
  .button-container {
    display: flex;
    justify-content: flex-start; /* 確保按鈕靠左對齊 */
  }

  .button-container form {
    margin-right: 5px; /* 減少間距，讓按鈕更靠近 */
  }

  .button-container form:last-child {
    margin-right: 0; /* 最後一個表單不需要右邊距 */
  }
</style>