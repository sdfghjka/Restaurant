<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 col-12 mx-auto">
      <h2 class="text-center mb-4">Add New Restaurant</h2>
      <form action="/restaurants/add" method="POST" enctype="multipart/form-data">
        {{> message }}
        <!-- Restaurant Name -->
        <div class="form-group mb-3">
          <label for="name">Restaurant Name (Japanese)</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Enter restaurant name in Japanese" required>
        </div>
        
        <!-- Restaurant Name (English) -->
        <div class="form-group mb-3">
          <label for="name_en">Restaurant Name (English)</label>
          <input type="text" class="form-control" id="name_en" name="name_en" placeholder="Enter restaurant name in English" required>
        </div>
        
        <!-- Restaurant Category -->
        <div class="form-row mb-3">
        <label class="form-label" for="categoryId">Category</label>
          <select class="form-control" id="categoryId" name="categoryId">
           {{#each categories}}
           <option value="{{this.id}}">{{this.name}}</option>
          {{/each}}
        </select>
        </div>
        
        <!-- Restaurant Image -->
        <div class="form-group mb-3">
            <label class="form-label" for="image">Image</label>
  <input class="form-control" type="file" class="form-control-file" id="image" name="image">
        </div>
        
        <!-- Restaurant Location -->
        <div class="form-group mb-3">
          <label for="location">Location</label>
          <input type="text" class="form-control" id="location" name="location" placeholder="Enter restaurant location" required>
        </div>

        <!-- Restaurant Phone -->
        <div class="form-group mb-3">
          <label for="phone">Phone</label>
          <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter restaurant phone number" required>
        </div>

        <!-- Google Map URL -->
        <div class="form-group mb-3">
          <label for="google_map">Google Map Link</label>
          <input type="text" class="form-control" id="google_map" name="google_map" placeholder="Enter Google Maps URL" required>
        </div>
        
        <!-- Restaurant Rating -->
        <div class="form-group mb-3">
          <label for="rating">Rating</label>
          <input type="number" class="form-control" id="rating" name="rating" min="1" max="5" step="0.1" placeholder="Enter rating (1 to 5)" required>
        </div>

        <!-- Restaurant Description -->
        <div class="form-group mb-3">
          <label for="description">Description</label>
          <textarea class="form-control" id="description" name="description" rows="5" placeholder="Enter a description of the restaurant" required></textarea>
        </div>
        
        <!-- Submit Button -->
        <div class="form-group text-center">
          <button type="submit" class="btn btn-success">Add Restaurant</button>
        </div>

      </form>
    </div>
  </div>
</div>
