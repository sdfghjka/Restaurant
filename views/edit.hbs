<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 col-12 mx-auto">
      <h2 class="text-center mb-4">Edit Restaurant</h2>
      <form action="/restaurants/update/{{restaurant.id}}?_method=PUT" method="POST">
        {{> message }}
        <!-- Restaurant Name -->
        <div class="form-group mb-3">
          <label for="name">Restaurant Name (Japanese)</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Enter restaurant name in Japanese" value="{{restaurant.name}}" required>
        </div>
        
        <!-- Restaurant Name (English) -->
        <div class="form-group mb-3">
          <label for="name_en">Restaurant Name (English)</label>
          <input type="text" class="form-control" id="name_en" name="name_en" placeholder="Enter restaurant name in English" value="{{restaurant.name_en}}" required>
        </div>
        
        <!-- Restaurant Category -->
        <div class="form-group mb-3">
          <label for="category">Category</label>
          <input type="text" class="form-control" id="category" name="category" placeholder="Enter category (e.g., Italian, Sushi)" value="{{restaurant.category}}" required>
        </div>
        
        <!-- Restaurant Image -->
        <div class="form-group mb-3">
          <label for="image">Restaurant Image</label>
          <input type="text" class="form-control" id="image" name="image" value="{{restaurant.image}}"  required>
        </div>
        
        <!-- Restaurant Location -->
        <div class="form-group mb-3">
          <label for="location">Location</label>
          <input type="text" class="form-control" id="location" name="location" placeholder="Enter restaurant location" value="{{restaurant.location}}" required>
        </div>

        <!-- Restaurant Phone -->
        <div class="form-group mb-3">
          <label for="phone">Phone</label>
          <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter restaurant phone number" value="{{restaurant.phone}}" required>
        </div>

        <!-- Google Map URL -->
        <div class="form-group mb-3">
          <label for="google_map">Google Map Link</label>
          <input type="text" class="form-control" id="google_map" name="google_map" placeholder="Enter Google Maps URL" value="{{restaurant.google_map}}" required>
        </div>
        
        <!-- Restaurant Rating -->
        <div class="form-group mb-3">
          <label for="rating">Rating</label>
          <input type="number" class="form-control" id="rating" name="rating" min="1" max="5" step="0.1" placeholder="Enter rating (1 to 5)" value="{{restaurant.rating}}" required>
        </div>

        <!-- Restaurant Description -->
        <div class="form-group mb-3">
          <label for="description">Description</label>
          <textarea class="form-control" id="description" name="description" rows="5" placeholder="Enter a description of the restaurant"  required>{{restaurant.description}}</textarea>
        </div>
        
        <!-- Submit Button -->
        <div class="form-group text-center">
          <button type="submit" class="btn btn-primary">Update</button>
        </div>

      </form>
    </div>
  </div>
</div>
