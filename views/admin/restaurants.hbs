<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap Icons（如果有使用圖標） -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
{{>header}}
    
<div class="container mt-5">
  <h1 class="mb-4 text-center">&nbsp;</h1>
  {{> admin-tabs route='restaurants'}}
  <h5>{{>message}}</h5>
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="text-secondary">餐廳列表</h3>
    <a href='/admin/restaurants/create' class="btn btn-primary">
      <i class="bi bi-plus-lg"></i> 新增餐廳
    </a>
  </div>

  <div class="table-responsive">
    <table class="table table-hover align-middle shadow-sm">
      <thead class="table-dark">
        <tr>
          <th scope="col" class="text-center">#</th>
          <th scope="col">餐廳名稱</th>
          <th scope="col" class="text-center">操作</th>
        </tr>
      </thead>
      <tbody>
        {{#each restaurants}}
          <tr>
            <th scope="row" class="text-center">{{this.id}}</th>
            <td>{{this.name}}</td>
            <td class="text-center">
              <a href="/restaurants/{{this.id}}" class="btn btn-sm btn-info me-2">
                <i class="bi bi-eye"></i> 查看
              </a>
              <a href="/restaurants/{{this.id}}/edit" class="btn btn-sm btn-warning me-2">
                <i class="bi bi-pencil"></i> 編輯
              </a>
              <form action="/restaurants/delete/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('確定要刪除嗎？');">
                  <i class="bi bi-trash"></i> 刪除
                </button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
