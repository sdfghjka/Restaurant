<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap Icons（如果有使用圖標） -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
{{>header}}
<!-- 使用 Bootstrap Modal (彈出視窗) 來顯示追蹤者和追蹤中名單 -->
<!-- 個人資訊卡片 -->
<div class="card shadow-sm mb-3 p-3">
  <div class="row g-3 align-items-center">
    <!-- User Image -->
    <div class="col-md-4 text-center">
      {{#if user.image}}
        <img src="{{user.image}}" class="img-fluid rounded-circle border" width="200px" height="200px" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;" />
      {{else}}
        <img src="https://via.placeholder.com/200" class="img-fluid rounded-circle border" width="200px" height="200px" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;" />
      {{/if}}
    </div>

    <!-- User Info -->
    <div class="col-md-8">
      <div class="card-body">
        <h3 class="card-title fw-bold">{{user.name}}</h3>
        <p class="card-text text-muted">{{user.email}}</p>

        <!-- Statistics -->
        <ul class="list-inline mt-3">
          <li class="list-inline-item"><strong>{{user.commentedRestaurants.length}}</strong> 已評論</li>
          <li class="list-inline-item"><strong>{{user.FavoritedRestaurants.length}}</strong> 收藏</li>
          <li class="list-inline-item">
            <a href="#" data-bs-toggle="modal" data-bs-target="#followingModal" class="text-decoration-none">
              <strong>{{user.Followings.length}}</strong> 追蹤中
            </a>
          </li>
          <li class="list-inline-item">
            <a href="#" data-bs-toggle="modal" data-bs-target="#followersModal" class="text-decoration-none">
              <strong>{{user.Followers.length}}</strong> 追蹤者
            </a>
          </li>
        </ul>

        <!-- Follow Button -->
        <div class="mt-3">
          {{#ifCond user.id user.id }}
            <a href="/users/{{user.id}}/edit" class="btn btn-primary btn-sm">
              <i class="fas fa-user-edit"></i> 編輯
            </a>
          {{else}}
            {{#if this.isFollowed }}
              <form action="/following/{{user.id}}?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger btn-sm">
                  <i class="fas fa-user-minus"></i> 取消追蹤
                </button>
              </form>
            {{else}}
              <form action="/following/{{user.id}}" method="POST" class="d-inline">
                <button type="submit" class="btn btn-outline-primary btn-sm">
                  <i class="fas fa-user-plus"></i> 追蹤
                </button>
              </form>
            {{/if}}
          {{/ifCond}}
        </div>
      </div>
    </div>
  </div>
</div>

<!-- 已發布餐廳名單 -->
<div class="card shadow-sm mb-3">
  <div class="card-header fw-bold">
    <i class="fas fa-utensils"></i> 已發布餐廳名單
  </div>
  <div class="card-body d-flex flex-wrap gap-2">
    {{#each user.publishedRestaurants}}
      <a href="/restaurants/{{this.id}}" class="text-decoration-none">
        <img src="{{this.image}}" width="100" height="100" class="rounded border avatar" />
        <p class="text-center mt-2">{{this.name}}</p>
      </a>
    {{/each}}
  </div>
</div>

<!-- 已評論餐廳 -->
<div class="card shadow-sm mb-3">
  <div class="card-header fw-bold">
    <i class="fas fa-comment-dots"></i> {{user.commentedRestaurants.length}} 已評論餐廳
  </div>
  <div class="card-body d-flex flex-wrap gap-2">
    {{#each user.commentedRestaurants}}
      <a href="/restaurants/{{this.id}}" class="text-decoration-none">
        <img src="{{this.image}}" width="100" height="100" class="rounded border avatar" />
        <p class="text-center mt-2">{{this.name}}</p>
      </a>
    {{/each}}
  </div>
</div>

<!-- 收藏的餐廳 -->
<div class="card shadow-sm">
  <div class="card-header fw-bold">
    <i class="fas fa-heart"></i> {{user.FavoritedRestaurants.length}} 收藏的餐廳
  </div>
  <div class="card-body d-flex flex-wrap gap-2">
    {{#each user.FavoritedRestaurants}}
      <a href="/restaurants/{{this.id}}" class="text-decoration-none">
        <img src="{{this.image}}" width="100" height="100" class="rounded border avatar" />
        <p class="text-center mt-2">{{this.name}}</p>
      </a>
    {{/each}}
  </div>
</div>

<!-- 追蹤中 Modal -->
<div class="modal fade" id="followingModal" tabindex="-1" aria-labelledby="followingModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="followingModalLabel">追蹤中</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        {{#each user.Followings}}
          <div class="d-flex align-items-center mb-2">
            <img src="{{this.image}}" width="50" height="50" class="rounded-circle border me-2" />
            <a href="/users/{{this.id}}" class="text-decoration-none">{{this.name}}</a>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<!-- 追蹤者 Modal -->
<div class="modal fade" id="followersModal" tabindex="-1" aria-labelledby="followersModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="followersModalLabel">追蹤者</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        {{#each user.Followers}}
          <div class="d-flex align-items-center mb-2">
            <img src="{{this.image}}" width="50" height="50" class="rounded-circle border me-2" />
            <a href="/users/{{this.id}}" class="text-decoration-none">{{this.name}}</a>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>